<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enregistrerGrapheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fond"
    android:stretchColumns="2"
    tools:context="vues.Enregistrer_Grapheme" >

    <ImageButton
        android:id="@+id/boutonVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonValiderGrapheme"
        android:layout_marginRight="15dp"
          android:background="@drawable/video"
        android:padding="40dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/labelEleveConnecte"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
         android:layout_marginTop="25dp"
         android:background="@drawable/kid"
           android:padding="50dp" />

    <ImageButton
        android:id="@+id/boutonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/boutonVideo"
        android:layout_alignTop="@+id/imageView1"
        android:background="@drawable/menu"
        android:padding="40dp" />

    <TextView
        android:id="@+id/labelEleveConnecte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/label_grapheme"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="61dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@android:dimen/app_icon_size" />

    <ImageButton
        android:id="@+id/boutonReferente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/boutonImage"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/referente"
        android:padding="40dp" />

    <ImageButton
        android:id="@+id/boutonImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/boutonVideo"
        android:layout_below="@+id/buttonValiderGrapheme"
        android:background="@drawable/camera"
        android:padding="40dp" />

    <ImageButton
        android:id="@+id/boutonSon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/label_grapheme"
        android:layout_alignLeft="@+id/boutonVideo"
        android:background="@drawable/micro"
        android:padding="40dp"
        tools:ignore="ContentDescription" />

    <AutoCompleteTextView
        android:id="@+id/grapheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boutonHome"
        android:layout_marginTop="174dp"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@drawable/style_field"
        android:ems="10"
        android:scrollbars="horizontal|vertical"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonValiderGrapheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/grapheme"
        android:layout_marginRight="277dp"
        android:layout_toLeftOf="@+id/boutonVideo"
        android:background="@drawable/ajouter" />

    <TextView
        android:id="@+id/label_grapheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonValiderGrapheme"
        android:layout_alignLeft="@+id/grapheme"
        android:layout_marginBottom="38dp"
        android:text="@string/label_grapheme"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

</RelativeLayout>