<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quizz"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fond"
    android:stretchColumns="2"
    tools:context="vues.Quizz" >

    <requestFocus android:layout_width="wrap_content" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="800dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/ImageBorel2"
        android:layout_below="@+id/imageBorel1"
        android:orientation="horizontal"
        android:textAlignment="center" >

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="@dimen/boutonRadioWidth"
            android:layout_height="@dimen/boutonRadioHeight"
            android:layout_marginRight="36dp"
            android:layout_marginTop="32dp"
            />

    </RadioGroup>

    <TextView
        android:id="@+id/labelEleveConnecte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignRight="@+id/radio1"
       
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@android:dimen/notification_large_icon_width" />

    <TextView
        android:id="@+id/graphemeCourant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelEleveConnecte"
        android:layout_alignBottom="@+id/labelEleveConnecte"
        android:layout_alignLeft="@+id/ImageBorel2"
        android:layout_marginLeft="107dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@android:dimen/notification_large_icon_width" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/kid" />

    <ImageView
        android:id="@+id/imageBorel1"
        android:layout_width="@dimen/imageBorelWidth"
        android:layout_height="@dimen/imageBorelHeight"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignTop="@+id/boutonProfil"
        android:layout_marginLeft="33dp"
        android:maxWidth="@dimen/layoutMarginTop"
        android:src="@drawable/borel_f" />

    <ImageView
        android:id="@+id/ImageBorel2"
        android:layout_width="@dimen/imageBorelWidth"
        android:layout_height="@dimen/imageBorelHeight"
        android:layout_below="@+id/graphemeCourant"
        android:layout_marginLeft="39dp"
        android:layout_toRightOf="@+id/boutonAjouterImage"
        android:fadingEdge="horizontal"
        android:maxHeight="@dimen/imageBorelHeight"
        android:maxWidth="@dimen/imageBorelWidth"
        android:src="@drawable/borel_f" />

    <ImageButton
        android:id="@+id/boutonAjouterImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageBorel2"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/imageBorel1"
        android:src="@drawable/check" />

    <ImageButton
        android:id="@+id/rechercheQuizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/boutonHome"
        android:layout_below="@+id/boutonAjouterImage"
        android:src="@drawable/recherche4" />

    <ImageButton
        android:id="@+id/boutonProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/boutonHome"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="34dp"
        android:src="@drawable/profil" />

    <ImageButton
        android:id="@+id/boutonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/menu" />

    <RadioButton
        android:id="@+id/radio1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/rechercheQuizz"
        android:layout_below="@+id/rechercheQuizz"
        android:layout_toRightOf="@+id/imageBorel1"
     
        android:checked="false" />

</RelativeLayout>