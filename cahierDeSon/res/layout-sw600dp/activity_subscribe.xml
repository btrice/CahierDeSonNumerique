<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_cadre"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Subscribe" >

    <ImageButton
        android:id="@+id/BoutonNxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="91dp"
        android:background="@drawable/next"
        android:contentDescription=";)"
        android:focusable="false" />

 <RelativeLayout
     android:id="@+id/ln"
     android:layout_width="300dp"
     android:layout_height="300dp"
     android:layout_centerHorizontal="true"
     android:layout_below="@+id/spinner1"
     android:orientation="vertical" >

     <LinearLayout
         android:id="@+id/lay_l_eye"
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:layout_marginLeft="35dp"
         android:layout_marginTop="35dp"
         android:orientation="horizontal" >
     </LinearLayout>

     <LinearLayout
         android:id="@+id/lay_noise"
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:orientation="horizontal" >
     </LinearLayout>

     <LinearLayout
         android:id="@+id/lay_mouth"
         android:layout_width="100dp"
         android:layout_height="80dp"
         android:layout_below="@+id/lay_noise"
         android:layout_centerHorizontal="true"
         android:orientation="horizontal" >
     </LinearLayout>

     <LinearLayout
         android:id="@+id/lay_r_eye"
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/lay_l_eye"
         android:layout_marginRight="37dp"
         android:orientation="horizontal" >
     </LinearLayout>
 </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay_smile"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/ln"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ButtonRed"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000" />

        <Button
            android:id="@+id/ButtonOrange"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF00FF" />

        <Button
            android:id="@+id/ButtonYellow"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D7DF01" />

        <Button
            android:id="@+id/ButtonGreen"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF00" />

        <Button
            android:id="@+id/ButtonBlue"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000FF" />

        <Button
            android:id="@+id/ButtonGrey"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6E6E6E" />

        <Button
            android:id="@+id/buttonWhite"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff" />
    </LinearLayout>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignLeft="@+id/ln"
        android:gravity="center"
        android:text="Classe"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/autoCompleteTextView1"
        android:layout_centerHorizontal="true"
        android:entries="@array/classes_array" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner1"
        android:layout_alignRight="@+id/TextView01"
        android:layout_marginRight="37dp"
        android:gravity="center"
        android:text="PrÃ©nom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Inscription"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="42sp" />

</RelativeLayout>