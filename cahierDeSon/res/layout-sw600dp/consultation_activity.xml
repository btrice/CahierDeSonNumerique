<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    tools:context=".ConsultationActivity" >
    
        <ImageButton
        android:id="@+id/btnprecedent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/precedent" 
         tools:ignore="ContentDescription"
        android:background="@null"/>

         <TextView
             android:id="@+id/textGrapheme"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/linearLayout2"
             android:layout_alignTop="@+id/sonGrapheme"
             android:layout_marginLeft="23dp"
             android:layout_toRightOf="@+id/btnprecedent"
             android:text="AIDARA"
             android:textAppearance="?android:attr/textAppearanceLarge" />

         <ImageButton
             android:id="@+id/sonGrapheme"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/linearLayout1"
             android:layout_marginLeft="92dp"
             android:layout_marginTop="30dp"
             android:background="@null"
             android:src="@drawable/playc"
             tools:ignore="ContentDescription" />

         <LinearLayout
             android:id="@+id/linearLayout2"
             android:layout_width="250dp"
             android:layout_height="350dp"
             android:layout_alignLeft="@+id/textGrapheme"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="28dp"
             android:layout_marginLeft="36dp"
             android:background="@drawable/lbg"
             android:gravity="center"
             android:orientation="vertical"
             android:padding="10dp" >

             <ImageView
                 android:id="@+id/imageBorel"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="5dp"
                 android:background="@null"
                 
                 android:src="@drawable/aucune"
                 tools:ignore="ContentDescription" />

             <ImageButton
                 android:id="@+id/btnBorel"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="5dp"
                 android:layout_marginTop="10dp"
                  android:visibility="gone" 
                 android:background="@null"
                 android:src="@drawable/photbc"
                
                 tools:ignore="ContentDescription" />

             <ImageView
                 android:id="@+id/imageGrapheme"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@null"
                 android:src="@drawable/aucune"
                 tools:ignore="ContentDescription" />

             <ImageButton
                 android:id="@+id/btntof"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@null"
                 android:src="@drawable/phot"
                 android:visibility="gone"
                 tools:ignore="ContentDescription" />
         </LinearLayout>

         <ImageButton
             android:id="@+id/modifson"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignRight="@+id/linearLayout1"
             android:layout_alignTop="@+id/sonGrapheme"
             android:layout_marginRight="54dp"
             android:background="@null"
             android:src="@drawable/modifson"
             tools:ignore="ContentDescription" />

         <ImageButton
             android:id="@+id/btnsuivant"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignTop="@+id/btnprecedent"
             android:layout_marginRight="31dp"
             android:background="@null"
             android:src="@drawable/suivant"
             tools:ignore="ContentDescription" />

         <LinearLayout
             android:id="@+id/linearLayout1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/linearLayout2"
             android:layout_marginRight="65dp"
             android:layout_toLeftOf="@+id/btnsuivant"
             android:background="@drawable/lbg"
             android:gravity="center"
             android:orientation="vertical"
             android:padding="10dp" >

             <VideoView
                 android:id="@+id/videoGrapheme"
                 android:layout_width="380dp"
                 android:layout_height="300dp"
                 android:background="@null"
                 tools:ignore="ContentDescription" />

             <ImageButton
                 android:id="@+id/btncam"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@null"
                 android:gravity="center"
                 android:src="@drawable/cam"
                 android:visibility="gone"
                 tools:ignore="ContentDescription" />
         </LinearLayout>

         <ImageButton
             android:id="@+id/Accueil"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/linearLayout2"
             android:layout_toRightOf="@+id/linearLayout1"
             android:background="@null"
             android:src="@drawable/menu"
             tools:ignore="ContentDescription" />

</RelativeLayout>