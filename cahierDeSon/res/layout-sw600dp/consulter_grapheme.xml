<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enregistrerGrapheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fond"
    android:stretchColumns="2"
    tools:context="vues.Enregistrer_Grapheme" >

            <TextView
                android:id="@+id/label_grapheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/grapheme"
                android:layout_alignLeft="@+id/grapheme"
                android:layout_marginBottom="39dp"
                android:layout_marginLeft="30dp"
                android:text="@string/label_grapheme"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageButton
                android:id="@+id/boutonHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="166dp"
                 android:layout_marginRight="15dp"
                android:src="@drawable/menu" />

            <ImageButton
                android:id="@+id/buttonChercherGrapheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/buttonProfil"
                android:layout_marginRight="164dp"
                android:layout_toLeftOf="@+id/buttonProfil"
                android:background="@drawable/recherche" />

            <TextView
                android:id="@+id/labelEleveConnecte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@+id/imageView2"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@android:dimen/app_icon_size" />

            <AutoCompleteTextView
                android:id="@+id/grapheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/boutonHome"
                android:layout_marginRight="126dp"
                android:layout_toLeftOf="@+id/boutonHome"
                android:background="@drawable/style_field"
                android:ems="10"
                android:scrollbars="horizontal|vertical" />

            <ImageButton
                android:id="@+id/buttonProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/boutonHome"
                android:layout_below="@+id/boutonHome"
                android:layout_marginTop="79dp"
                android:src="@drawable/profil" />

            <ListView
                android:id="@+id/listModule"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_alignLeft="@+id/labelEleveConnecte"
                android:layout_alignTop="@+id/label_grapheme"
                android:layout_marginTop="28dp"
                android:animateLayoutChanges="true"
                android:nextFocusRight="@dimen/textSize"
                android:overScrollMode="ifContentScrolls"
                android:scrollingCache="true" >
            </ListView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/labelEleveConnecte"
                android:layout_marginLeft="48dp"
                android:src="@drawable/kid" />
     
</RelativeLayout>	